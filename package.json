{
  "name": "craft-management",
  "version": "1.0.0",
  "description": "User Management Application using Node.js, TypeScript and Express.js",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc && mkdir -p dist/database && cp src/database/*.sql dist/database/",
    "start": "node dist/app.js",
    "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
    "lint": "eslint . --ext .ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "db:setup": "npm run build && node dist/database/setup.js",
    "db:init": "npm run docker:db && sleep 5 && npm run db:setup",
    "app:start": "npm run docker:db && sleep 3 && npm run dev",
    "create-admin": "ts-node src/scripts/create-admin.ts",
    "docker:db": "docker-compose up -d",
    "docker:db:stop": "docker-compose down",
    "docker:db:logs": "docker-compose logs -f postgres",
    "docker:db:reset": "docker-compose down -v && docker-compose up -d && sleep 5 && npm run db:setup",
    "docker:full": "docker-compose -f docker-compose.full.yml up -d --build",
    "docker:full:stop": "docker-compose -f docker-compose.full.yml down",
    "docker:full:logs": "docker-compose -f docker-compose.full.yml logs -f",
    "docker:full:reset": "docker-compose -f docker-compose.full.yml down -v && docker-compose -f docker-compose.full.yml up -d --build"
  },
  "keywords": ["nodejs", "typescript", "express", "user-management"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "uuid": "^9.0.1",
    "pg": "^8.11.3",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "swagger-ui-express": "^5.0.0",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.10.4",
    "@types/uuid": "^9.0.7",
    "@types/pg": "^8.10.9",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/js-yaml": "^4.0.9",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "eslint": "^8.55.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}

